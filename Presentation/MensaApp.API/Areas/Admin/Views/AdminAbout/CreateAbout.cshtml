@using MensaApp.API.Areas.Admin.Models.Abouts
@model CreateAboutViewModel

@{
    ViewData["Title"] = "Hakkımızda Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Hakkımızda Ekle</h1>
<form method="post" asp-action="CreateAbout" asp-controller="AdminAbout" class="form-group">
    <label>Başlık Ekle</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Açıklama</label>
    <textarea rows="5" cols="40" asp-for="Description" class="form-control" ></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn btn-primary">Ekle</button>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>