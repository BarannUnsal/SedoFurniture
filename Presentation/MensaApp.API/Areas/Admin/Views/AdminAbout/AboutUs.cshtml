@using MensaApp.Domain.Entities
@model List<About>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />

<div class="table-responsive">
    <h1>Hakkımızda</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <form asp-action="RemoveAbout" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger">
                            Sil
                        </button>
                    </form>
                </td>
                <td>
                    <a class="btn btn-outline-warning" href="/Admin/AdminAbout/EditAbout/@item.Id">Düzenle</a>
                </td>
            </tr>
        }
    </table>
    <a href="/Admin/AdminAbout/CreateAbout/" class="btn btn-primary">Yeni Hakkımızda Ekle</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>