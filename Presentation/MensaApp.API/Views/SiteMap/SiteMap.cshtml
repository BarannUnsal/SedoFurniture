@{
    ViewData["Title"] = "Site Haritası";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home"><i class="fa-solid fa-house"></i> Ana Sayfa</a></li>
        <li class="breadcrumb-item active" aria-current="page">Site Haritası</li>
    </ol>
</nav>

<div class="container text-center">
    <div class="sitemap_header">
        <h2 class="header_">Genel</h2>
    </div>
    <ul class="list-inline mt-4">
        <li class="list-inline-item">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-black-50">
               <i class="fa-solid fa-circle fa-2xs" style="opacity: 0.5;"></i> Ana Sayfa
            </a>
        </li>
        <li class="list-inline-item">
            <a asp-action="Projects" asp-controller="Project" class="text-decoration-none text-black-50">
               <i class="fa-solid fa-circle fa-2xs" style="opacity: 0.5;"></i> Projelerimiz
            </a>
        </li>
        <li class="list-inline-item">
            <a asp-action="AboutUs" asp-controller="About" class="text-decoration-none text-black-50">
               <i class="fa-solid fa-circle fa-2xs" style="opacity: 0.5;"></i> Hakkımızda
            </a>
        </li>
        <li class="list-inline-item">
            <a asp-action="Contact" asp-controller="Contact" class="text-decoration-none text-black-50">
               <i class="fa-solid fa-circle fa-2xs" style="opacity: 0.5;"></i> İletişim
            </a>
        </li>
    </ul>
    @await Component.InvokeAsync("SiteMapCategories")
</div>

<div style="display:none;">
    @await Component.InvokeAsync("ProductDetailCarousel")
</div>